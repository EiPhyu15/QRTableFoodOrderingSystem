                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isPrepared" /> @Html.DisplayNameFor(model => model.isPrepared)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isSenttoTable" /> @Html.DisplayNameFor(model => model.isSenttoTable)
