@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="container-fluid bg-light py-5 rounded-4 shadow-sm mb-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-3 fw-bold mb-3">Order Effortlessly<br>with QR Table</h1>
            <p class="lead text-muted mb-4">
                Scan, order, and enjoy your meal—right from your table. Fast, contactless, and convenient dining experience.
            </p>
            <a href="/Menu" class="btn btn-primary btn-lg px-4">View Menu</a>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?auto=format&fit=crop&w=600&q=80"
                 alt="Ordering Food at Table"
                 class="img-fluid rounded-4 shadow"
                 style="max-height: 350px;" />
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    
        
        

<!-- Ambiance Section -->
<div class="container mb-5">
    <div class="row align-items-center">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=600&q=80"
                 alt="Restaurant Ambiance"
                 class="img-fluid rounded-4 shadow"
                 style="max-height: 350px;" />
        </div>
        <div class="col-md-6">
            <h3 class="fw-bold mb-3">Experience Our Ambiance</h3>
            <p class="text-muted fs-5">
                Enjoy a modern dining atmosphere designed for comfort and convenience. Our digital ordering system lets you focus on what matters—great food and great company.
            </p>
        </div>
    </div>
</div>

